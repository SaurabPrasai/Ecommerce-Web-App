<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <div class="container">
                <h2 class="eachPageDescription text-muted"><%= admin?"Update Product":"Add Product"  %></h2>
                <% if(admin){%>
                    <form action="/products/add" method="post">
                        <input type="hidden" name="productId" value="<%= product.productId  %>" id="">
                        <p> <label for="title">Title:</label>
                            <input type="text" name="title" id="title" value="<%= product.title  %>" class="form-control">
                        </p>
                        <p>
                            <label for="image">Image Url:</label>
                            <input type="text" name="image" id="image" value="<%= product.image  %>" class="form-control">
                        </p>
                        <p>
                            <label for="price">Price:</label>
                            <input type="number" name="price" id="price" step="any" value="<%= product.price  %>" class="form-control" >
                        </p>
                        <p>
                            <label for="description">Description:</label>
                            <textarea name="description" id="description" class="form-control"><%= product.description %></textarea>
                        </p>
                        <p>
                            <button class="btn">Update</button>
                        </p>
    
                    </form>

              <%  } else{%>
                    <form action="/products/add" method="post">
                    <input type="hidden" name="productId" value="<%= Date.now() %>" id="">
                    <p> <label for="title">Title:</label>
                        <input type="text" name="title" id="title" class="form-control">
                    </p>
                    <p>
                        <label for="image">Image Url:</label>
                        <input type="text" name="image" id="image" class="form-control">
                    </p>
                    <p>
                        <label for="price">Price:</label>
                        <input type="number" name="price" id="price" step="any" class="form-control" >
                    </p>
                    <p>
                        <label for="description">Description:</label>
                        <textarea name="description" id="description" class="form-control"></textarea>
                    </p>
                    <p>
                        <button class="btn">Add Product</button>
                    </p>

                </form>
              <%   } %>
                
            </div>
            <%- include('partials/footer.ejs') %> 