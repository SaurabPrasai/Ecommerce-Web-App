<%- include('partials/head.ejs')  %>

<body>
<%- include('partials/navbar.ejs')  %>

<h1 class="container eachPageDescription text-muted">Cart Details</h1>

<table class="table">
    <!-- <thead>
      <tr class="eachRowFromCart">
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
